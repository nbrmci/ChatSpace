.Sidebar
  .Sidebar-header
    .Sidebar-header__box
      %p.Sidebar-header__box--user
        = current_user.name
      %ul.Sidebar-header__icons
        %li.Sidebar-header__icons--icon
          = link_to new_group_path, class:"edit" do
            = icon('fas', 'edit')
        %li.Sidebar-header__icons--icon
          = link_to edit_user_path(current_user), class:"cog" do
            = icon('fas', 'cog')
  .Sidebar-groups
    - current_user.groups.each do |group|
      .Sidebar-groups__group
        = link_to group_messages_path(group) do
          .Sidebar-groups__group--name
            = group.name
          .Sidebar-groups__new-message
            = group.show_last_message